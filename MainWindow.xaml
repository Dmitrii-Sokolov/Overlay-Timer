<Window x:Class="Overlay_Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Overlay_Timer"
        mc:Ignorable="d"
        Title="Overlay Timer"
        Height="200" Width="200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="CanMinimize"
        ShowInTaskbar="False">
  <Border Background="#F0000000">
    <Grid>
      <Path x:Name="FillArc"
          Fill="#66FFFFFF"
          StrokeThickness="5"/>
      <TextBlock x:Name="TimerText"
                     FontSize="56"
                     Foreground="CadetBlue"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Margin="0,-8,0,0"/>
    </Grid>
  </Border>

  <Window.Icon>
    <DrawingImage>
      <DrawingImage.Drawing>
        <DrawingGroup>

          <!-- Body -->
          <GeometryDrawing Brush="Gray">
            <GeometryDrawing.Geometry>
              <EllipseGeometry Center="16,16" RadiusX="16" RadiusY="16"/>
            </GeometryDrawing.Geometry>
            <GeometryDrawing.Pen>
              <Pen Thickness="5" Brush="Black"/>
            </GeometryDrawing.Pen>
          </GeometryDrawing>

          <!-- Main arrow -->
          <GeometryDrawing Brush="Black">
            <GeometryDrawing.Geometry>
              <LineGeometry StartPoint="16,16" EndPoint="22,16"/>
            </GeometryDrawing.Geometry>
            <GeometryDrawing.Pen>
              <Pen Thickness="5" Brush="Black" StartLineCap="Round" EndLineCap="Round"/>
            </GeometryDrawing.Pen>
          </GeometryDrawing>

          <!-- Secondary arrow -->
          <GeometryDrawing Brush="Black">
            <GeometryDrawing.Geometry>
              <LineGeometry StartPoint="16,16" EndPoint="16,8"/>
            </GeometryDrawing.Geometry>
            <GeometryDrawing.Pen>
              <Pen Thickness="5" Brush="Black" StartLineCap="Round" EndLineCap="Round"/>
            </GeometryDrawing.Pen>
          </GeometryDrawing>

        </DrawingGroup>
      </DrawingImage.Drawing>
    </DrawingImage>
  </Window.Icon>
  
</Window>
